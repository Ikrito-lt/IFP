<Window x:Class="IFP.UI.DialogueYN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IFP.UI"
        mc:Ignorable="d"
        Title="" Height="130" Width="250">
    <Grid Margin="0"   Background="GhostWhite">
        <StackPanel Orientation="Vertical" Margin="15,15,15,0">

            <Label x:Name="Label" Width="200" HorizontalAlignment="Center" HorizontalContentAlignment="Center" >
                <TextBlock x:Name="LabelText" TextWrapping="WrapWithOverflow" TextAlignment="Center" FontSize="16" Text="lol test text">
                </TextBlock>
            </Label>

        </StackPanel>
        <Grid Margin="0" VerticalAlignment="Bottom">

            <Button x:Name="YesButton" Click="YesButton_Click" Content="Yes" Padding="15,5,15,5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10"/>
            <Button x:Name="NoButton" Click="NoButton_Click" Content="No" Padding="15,5,15,5" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10"/>
        </Grid>
    </Grid>
</Window>
